  <script>
    document.querySelector("#quizTitle b").textContent = "Solving Harder Linear Equations";

   // -----------------------------
// Question bank (HCF & LCM)
// -----------------------------
// ---------------------------------------------------------
// FRACTIONS, DECIMALS & PERCENTAGES (CONVERSION)
// NORMAL QUESTIONS + WORD PROBLEMS
// ---------------------------------------------------------
const allQuestions = [

  // -------------------------
  // HARDER LINEAR EQUATIONS
  // -------------------------

  // NORMAL QUESTIONS

  // MEDIUM
  { q: "Solve: 5x + 7 = 32", a: "5" },
  { q: "Solve: 3(2x - 1) = 21", a: "4" },
  { q: "Solve: 4x - 9 = 2x + 7", a: "8" },
  { q: "Solve: 7x + 3 = 3x + 27", a: "6" },
  { q: "Solve: 9x - 4 = 2x + 24", a: "4" },

  // HARD
  { q: "Solve: 6(x - 2) = 3x + 9", a: "7" },
  { q: "Solve: 5(2x + 1) = 3(3x + 7)", a: "-2" },
  { q: "Solve: 8x - 3 = 5x + 18", a: "7" },
  { q: "Solve: 4(3x - 2) = 2(5x + 6)", a: "5" },
  { q: "Solve: 7x + 4 = 3(2x + 5)", a: "11" },

  // VERY HARD (but still clean)
  { q: "Solve: 9(x - 4) = 3(2x + 5)", a: "7" },
  { q: "Solve: 5x + 2 = 3(x + 6)", a: "8" },
  { q: "Solve: 4(2x + 3) = 3(3x - 2)", a: "18" },
  { q: "Solve: 6x - 7 = 2(2x + 5)", a: "9" },
  { q: "Solve: 10(x - 3) = 4(2x + 1)", a: "8" },


  // -------------------------
  // WORD PROBLEMS
  // -------------------------

  // MEDIUM WORD PROBLEMS
  { q: "A number increased by 7 equals 32. What is the number?", a: "25" },
  { q: "Three times a number minus 1 equals 20. Find the number.", a: "7" },
  { q: "A number multiplied by 4 then reduced by 9 equals 19. Find the number.", a: "7" },
  { q: "Seven times a number plus 3 equals 38. Find the number.", a: "5" },
  { q: "Nine times a number minus 4 equals 23. Find the number.", a: "3" },

  // HARD WORD PROBLEMS
  { q: "Six times a number minus 12 equals three times the number plus 9. Find the number.", a: "7" },
  { q: "Five times a number plus 1 equals three times the number plus 14. Find the number.", a: "6.5" },
  { q: "Eight times a number minus 3 equals five times the number plus 18. Find the number.", a: "7" },
  { q: "Four times a number minus 2 equals twice the number plus 6. Find the number.", a: "4" },
  { q: "Seven times a number plus 4 equals three times the number plus 33. Find the number.", a: "7.25" },


  // -------------------------
// 15 HARD QUESTIONS
// -------------------------
{ q: "Solve: 6x + 5 = 3x + 26", a: "7" },
{ q: "Solve: 4(2x - 3) = 3x + 10", a: "11" },
{ q: "Solve: 9x - 14 = 5x + 18", a: "8" },
{ q: "Solve: 7(3x - 2) = 5x + 40", a: "6" },
{ q: "Solve: 5x + 9 = 2(3x + 1)", a: "7" },
{ q: "Solve: 8x - 3 = 3(2x + 5)", a: "9" },
{ q: "Solve: 10x + 4 = 6x + 28", a: "6" },
{ q: "Solve: 3(4x - 1) = 5x + 20", a: "7" },
{ q: "Solve: 12x - 7 = 5x + 35", a: "6" },
{ q: "Solve: 9(2x - 1) = 5x + 40", a: "7" },
{ q: "Solve: 4x + 13 = 3x + 25", a: "12" },
{ q: "Solve: 11x - 8 = 3x + 40", a: "6" },
{ q: "Solve: 7(2x + 3) = 5x + 51", a: "6" },
{ q: "Solve: 6x - 5 = 2(2x + 7)", a: "9" },
{ q: "Solve: 8(3x - 2) = 4(5x + 6)", a: "10" },

// -------------------------
// more! EXTRA HARD QUESTIONS
// -------------------------
{ q: "Solve: 9(3x - 4) = 5(4x + 7)", a: "11" },
{ q: "Solve: 7(4x + 1) = 5(5x + 9)", a: "8" },
{ q: "Solve: 6(5x - 2) = 4(7x + 8)", a: "10" },
{ q: "Solve: 8(3x + 5) = 6(4x + 9)", a: "7" },
{ q: "Solve: 5(6x - 1) = 3(8x + 11)", a: "7" },
{ q: "Solve: 9(2x + 7) = 6(3x + 17)", a: "11" },
{ q: "Solve: 4(7x - 3) = 5(5x - 2)", a: "7" },
{ q: "Solve: 10(3x - 4) = 6(5x + 2)", a: "8" },
{ q: "Solve: 12(2x + 1) = 8(3x + 5)", a: "7" },
{ q: "Solve: 15x - 4 = 7(2x + 5)", a: "7" },




];


    // -----------------------------
    // Pick 10 random questions
    // -----------------------------
    let quizQuestions = [];
    function pickRandomQuestions() {
      quizQuestions = [...allQuestions]
        .sort(() => Math.random() - 0.5)
        .slice(0, 10);
    }

    // -----------------------------
    // Quiz state
    // -----------------------------
    let current = 0;
    let userAnswers = Array(10).fill("");
    let userWorking = Array(10).fill("");

    // -----------------------------
    // DOM elements
    // -----------------------------
    const questionNumber = document.querySelector(".question");
    const questionText = document.querySelector(".questiontext");
    const answerInput = document.querySelector("input[type='text']");
    const workingBox = document.querySelector("textarea");
    const resultsBox = document.getElementById("resultsBox");
    const quizUI = document.getElementById("quizUI");

    // -----------------------------
    // Load question
    // -----------------------------
    function loadQuestion() {
      const q = quizQuestions[current];

      questionNumber.textContent = `Question ${current + 1}/10`;
      questionText.textContent = q.q;

      answerInput.value = userAnswers[current];
      workingBox.value = userWorking[current];
    }

    // Auto-save typing
    answerInput.addEventListener("input", () => {
      userAnswers[current] = answerInput.value;
    });

    workingBox.addEventListener("input", () => {
      userWorking[current] = workingBox.value;
    });

    // -----------------------------
    // Navigation
    // -----------------------------
    function goNext() {
      userAnswers[current] = answerInput.value.trim();
      userWorking[current] = workingBox.value.trim();

      if (current === 9) {
        showResults();
        return;
      }

      current++;
      loadQuestion();
    }

    function goPrev() {
      if (current > 0) {
        current--;
        loadQuestion();
      }
    }

    // -----------------------------
    // Results
    // -----------------------------
    function showResults() {
      quizUI.style.display = "none";
      resultsBox.style.display = "block";

      let correct = 0;
      let breakdown = "";

      quizQuestions.forEach((q, i) => {
        const user = userAnswers[i];
        const isCorrect = user == q.a;

        if (isCorrect) correct++;

        breakdown += `
          <p style="font-size:18px; color:${isCorrect ? 'green' : 'darkred'};">
            Question ${i + 1}: ${q.a}
            ${!isCorrect ? `<br>You wrote: ${user}` : ""}
          </p>
        `;
      });

      const percent = Math.round((correct / 10) * 100);

      resultsBox.innerHTML = `
        <h1>Results</h1>
        <br>
        <h1>${correct}/10</h1>
        <h2>${percent}%</h2>

        <button onclick="restartQuiz()" 
          style="background-color: #1c7831; color: white; font-size: 22px; border:none; padding:8px;">
          Take this quiz again
        </button>

        <h3 style="margin-top:20px;">A breakdown:</h3>
        ${breakdown}
      `;
    }

    // -----------------------------
    // Restart
    // -----------------------------
    function restartQuiz() {
      pickRandomQuestions();
      current = 0;
      userAnswers = Array(10).fill("");
      userWorking = Array(10).fill("");

      resultsBox.style.display = "none";
      quizUI.style.display = "block";

      loadQuestion();
    }

    // -----------------------------
    // Start quiz
    // -----------------------------
    pickRandomQuestions();
    loadQuestion();
  </script>
  
